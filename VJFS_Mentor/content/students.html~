	<script src="../js/quiz.js"></script>
  	<script>

		// Fetch URL
		var url = window.location;

		// Check if a specific student is chosen
		var student_id = getURLParameter(url, 'student_id');
		if(student_id != null) {

			// Retrieve student
			getStudent(student_id, function(student) {
				console.log("Student: " + JSON.stringify(student));

				if(student != null) {
					// Display student and a save button
					// Remember that studentDescription is a textarea, so must un escape \n before displaying content
					$('#studentHeader').html(student['studentTitle']);
					$('#studentTitle').val(student['studentTitle']);
					$('#studentDescription').val(student['studentDescription'].replace(/\\\\n/g, '\n'));
					$('#studentSave').html('Save Student');

					// Display quiz's for student
					displayQuizes(student);
				}
			});
		} else {
                //Display an error
		}

  	</script>
